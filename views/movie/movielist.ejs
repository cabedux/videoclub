<!DOCTYPE html>
<html lang="en">
<head>
    <title>BLOCKBUSTER</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css">    
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
    <header>
        <% include ../navbar.ejs %>
    </header>
    <main>
        <div class="container pt-5">
            <div class="row">
              <div class="col-12 d-flex justify-content-between">
                <h1 class="">Peliculas</h1>
                <a class="btn btn-secondary my-auto" href="/movies/new" >+</a>
              </div>
              <div class="col-12 grey">
                <table class="table table-hover">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Titulo</th>
                    <th scope="col">Descripci√≥n</th>
                    <th scope="col">Fecha</th>
                    <th scope="col">Genero</th>
                    <th scope="col">Acciones</th>

                  </tr>
                </thead>
                <tbody>
                  <%dataMovie.forEach(function(movie){%>
                  <tr>
                    <th scope="row"><%= movie.movie_id%></th>
                    <td><%= movie.title%></td>
                    <td><%= movie.description%></td>
                    <td><%= movie.release_date%></td>
                    <td><%= movie.gender%></td>
                    <td>
                        <a class="text-secondary" href="/movies/edit/<%= movie.movie_id%>"><i class="far fa-edit"></i></a>
                        <a class="text-secondary" href="/movies/delete/<%= movie.movie_id%>"><i class="fas fa-trash"></i></a>
                    </td>
                  </tr>
                  <%})%>
                </tbody>
                </table>
              </div>   
            </div>
          </div>
    </main>
    
</body>
</html>